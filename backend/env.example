# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here
# Comma-separated list. Include your Render hostname and any custom domains.
ALLOWED_HOSTS=your-service.onrender.com

# Database Configuration (SQLite on Render persistent disk)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=/data/db.sqlite3
# The following are unused for SQLite; keep blank
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Redis Configuration (for Celery). Optional in production.
REDIS_URL=

# JWT Settings
# If not set, SIGNING_KEY falls back to SECRET_KEY
JWT_SECRET_KEY=
JWT_ACCESS_TOKEN_LIFETIME=5
JWT_REFRESH_TOKEN_LIFETIME=1

# Biometric Settings
FACE_RECOGNITION_TOLERANCE=0.6
EAR_RECOGNITION_TOLERANCE=0.7
MIN_CONFIDENCE_THRESHOLD=0.8
WORK_START_TIME=09:00

# Security Settings (set to your deployed frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080
CSRF_TRUSTED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080


# File Upload Settings
MAX_UPLOAD_SIZE=10485760
MEDIA_URL=/media/
# On Render, media should live on the persistent disk mounted at /data
MEDIA_ROOT=/data/media

# Email Settings (optional)
EMAIL_BACKEND=
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Sentry (for error monitoring)
SENTRY_DSN=

# Production Settings
STATIC_ROOT=staticfiles/
